    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "2.8.4",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "vitepress": "^1.1.3",
    "vuepress": "^1.9.7",
    "vuepress-theme-reco": "^1.6.16"
  },
  "dependencies": {
    "vue": "^2.7.14"
  }
