{
    "name": "blog",
    "version": "0.0.1",
    "description": "A Personal Blog Project Built With VitePress",
    "main": "src/index.md",
    "scripts": {
        "prepare": "husky install",
        "dev": "vitepress dev",
        "build": "vitepress build",
        "preview": "vitepress preview",
        "lint": "eslint . --ext .js,.cjs,.mjs,.ts,.cts,.mts --fix --ignore-path .gitignore",
        "format": "prettier . --write --ignore-unknown"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lvdengming/blog.git"
    },
    "keywords": [
        "blog"
    ],
    "author": "lvdengming@foxmail.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/lvdengming/blog/issues"
    },
    "homepage": "https://github.com/lvdengming/blog#readme",
    "lint-staged": {
        "*.{js,cjs,mjs,ts,cts,mts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,less}": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.{html,md,json}": [
            "prettier --write"
        ]
    },
    "stylelint": {
        "extends": "stylelint-config-standard"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.4",
        "@commitlint/config-conventional": "^17.4.4",
        "eslint": "^8.35.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.27.5",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.2",
        "prettier": "2.8.4",
        "stylelint": "^15.2.0",
        "stylelint-config-standard": "^30.0.1",
        "vitepress": "^1.2.2"
    }
}
